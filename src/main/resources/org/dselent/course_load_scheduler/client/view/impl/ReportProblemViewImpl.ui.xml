<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.button-green {
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background: #06c94a;
		}

.panel-grey {
		background: #DCDCDC;
		}
	</ui:style>
	<g:HTMLPanel ui:field="rootPanel" width="100%" height="100%">
		<g:LayoutPanel width="100%" height="100%" ui:field="layoutPanel" styleName="{style.panel-grey}">
			<g:layer left="3.0pct" top="3.0pct" right="3.0pct" bottom="87.0pct">
				<g:Label text="Report A Problem" ui:field="titleLabel" width="100%" height="100%" horizontalAlignment="ALIGN_CENTER"/>
			</g:layer>
			<g:layer left="3.0pct" top="10.0pct" bottom="80.0pct" right="3.0pct">
				<g:ListBox name="Type Of Problem (Required)" ui:field="typeList" width="100%" height="100%"/>
			</g:layer>
			<g:layer left="3.0pct" top="25.0pct" right="3.0pct" bottom="20.0pct">
				<g:TextArea name="description" ui:field="descriptionArea" width="100%" height="100%"/>
			</g:layer>
			<g:layer left="35.0pct" top="85.0pct" right="35.0pct" bottom="3.0pct">
				<g:Button ui:field="submitButton" width="100%" height="100%" styleName="{style.button-green}">Submit</g:Button>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 